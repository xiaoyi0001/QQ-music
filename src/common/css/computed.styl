
/*====================  原子类／其他  =======================*/

// 去掉输入框获取焦点时边框高亮
input:focus
  outline:0 !important

// 去掉输入区域边框阴影问题
input, textarea
  -webkit-appearance: none

*
  box-sizing: border-box

html
  -webkit-tap-highlight-color: rgba(0,0,0,0)

.f-w
  width: 100%

.f-h
  height: 100%


.f-clearfix:after
  display:block
  clear:both
  visibility:hidden
  height:0
  overflow:hidden
  content:"."

.f-clearfix
  zoom: 1

.f-fl
  float: left

.f-fr
  float: right

.f-ib
  display: inline-block

.f-pa
  position: absolute

.f-pr
  position: relative

.f-tc
  text-align: center

.f-p0
  padding: 0

.f-m0
  margin: 0

.ellipsis
  white-space: nowrap
  display:block
  overflow: hidden
  text-overflow: ellipsis
/*====================  方法函数  =======================*/
full = 100

r1($name, $attr)
  {$name} ($attr / full ) * 1rem

r2($name1, $attr1, $name2, $attr2)
  {$name1} ($attr1 / full) * 1rem
  {$name2} ($attr2 / full) * 1rem

r3($name, $attr1, $attr2)
  {$name} ($attr1) * 1rem ($attr2) * 1rem

r4($name, $attr)
  {$name} ($attr / full) * 1rem !important

body
  r1(font-size, 12)

*
  color: inherit

bg-pos($x, $y)
  background-repeat: no-repeat
  r3(background-position, $x, $y)
